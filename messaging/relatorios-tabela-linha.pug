	// when clicked on the dropdown phrase, it opens the full box
	script.
		$(".view-box-close").bind('click', function() {
			$(".view-box-open").fadeIn();
		});
	// when an option is selected on the dropdown, the full box fades and the option becomes blue
	script.
		$(".view-criteria").mouseup(function() {
			var text = $(this).text();
			$(".view-criteria").css("color","#37474F")
			$(this).css("color","#84ADFF")
			$(".insert-criteria").text(text);
			$(".view-box-open").hide();
		});
	// The full dropdonw closes when you click anywhere but on it
	script.
		$(document).mouseup(function (e) {
		    var target = $(".view-box-open");
		    if (!target.is(e.target) // if the target of the click isn't the target...
		        && target.has(e.target).length === 0) // ... nor a descendant of the target
		    {
		        target.fadeOut();
		    }
		});
