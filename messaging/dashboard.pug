								span.f6.theblack.b.ml1.mt3.relative.view-criteria.pointer.accent-hover.nowrap dos últimos 15 dias
					a.cta.pointer
						span.has-icon-left.icon-plus_blue nova mensagem

			//- Display the table
			.ct-chart.ct-double-octave
			// legenda do gráfico
			.flex.mt4.justify-between.items-start.relative.lh-copy
				div
					span.bg-green.br-100.pa1.dib
					span.f7.blue-gray.ml1.ttu.b.tracked Mensagens enviadas
					span.bg-red.br-100.pa1.dib.ml4
					span.f7.blue-gray.ml1.ttu.b.tracked Mensagens com erro
			//Detalhes
			div.mt5
				.flex.justify-between.relative
					h3.blue-gray.f5 Lista de envios
					//- a.cta.pointer.download.download-button
					//- 	span.has-icon-right.icon-dropdown__blue download
					//- .flex.flex-column.download-items.absolute.top-0.right-0.theblack.ph3.pt1.pb3.bg-white.z-3
					//- 	a(href='javascript:').b.f6.mt2.theblack.accent-hover Gerar tabela
			// tabela com resultados
			.flex.relative
				div.w-90.overflow-x-scroll
					table.mt4.mb4.tl.v-top.w-100(cellspacing='0', cellpadding='0')
						thead.v-top.w-100
							tr.ttu.f7.theblack.b.tl.tracked
								th.nowrap.table-month
									span.bb.b--black-20.pv2.pr3.db Month
								th.nowrap.w-4.table-campaign
									span.bb.b--black-20.pv2.pr3.db Campaign
								th.nowrap.table-concluded
									span.bb.b--black-20.pv2.pr3.db Concluded
								th.nowrap.table-scheduled
									span.bb.b--black-20.pv2.pr3.db Scheduled
								th.nowrap.table-sent
									span.bb.b--black-20.pv2.pr3.db Sent
								th.nowrap.table-Errors
									span.bb.b--black-20.pv2.pr3.db Errors
								th.nowrap.table-sending-start
									span.bb.b--black-20.pv2.pr3.db Sending start
								th.nowrap.table-customer
						tbody.v-top.w-100
							tr.bb.relative.f6
								td.nowrap.table-month
									span.db.bb.b--black-20.pv4.pr3 December
								td.nowrap.table-campaign
									span.db.bb.b--black-20.pv4.pr3 Mother's day 2017
								td.nowrap.table-concluded
									span.db.bb.b--black-20.pv4.pr3 80%
								td.nowrap.table-scheduled
									span.db.bb.b--black-20.pv4.pr3 9.5 MM
								td.nowrap.table-sent
									span.db.bb.b--black-20.pv4.pr3 5.5 MM
								td.nowrap.table-Errors
									span.db.bb.b--black-20.pv4.pr3 2.0 MM
								td.nowrap.table-sending-start
									span.db.bb.b--black-20.pv4.pr3 24/01/2017 10:28
				table.w-10.h-100.mt4.mb4.tl.v-top.absolute.top-0.right-0.bg-white(cellspacing='0', cellpadding='0')
					thead.v-top.w-100
						tr.pv3.b--black.bb.ttu.f7.theblack.b.tl.tracked
							th.bb.b--black-20.pv2.ph2.table-detalhes
								a.accent(href='javascript:') Ações
					tbody.v-top
						tr.bb.relative.f6
							td.bb.b--black-20.pv4.ph2.table-detalhes
								a.accent.has-icon-left.icon-download-blue.has-tooltip(href='javascript:', alt='Download')
									.tooltip-content
										span Download
								a.accent.has-icon-left.icon-eye-blue.ml3.has-tooltip(href='javascript:', alt='Detalhes')
									.tooltip-content
										span Detalhes
					
