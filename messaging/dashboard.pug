doctype html
html(lang='pt-br')
	head
		include pug/_head
	body
		aside
			.logo
				img.blue(src='img/logo-white.png', alt='Logo Movile Messaging')
			include pug/_nav
		section.upper-bar
			h1 Dashboard
		section.main-content
			div.mt4
				h3.theblack.f4.mt1 Resultados
				.flex.mt4.mb4.theblack.lh-copy.justify-between.items-center
					.flex.mr2.has-dropdown.relative
						span.f6 Envios
						span.f6.theblack.b.ml1.pr5.bb.relative.has-icon-right.icon-dropdown.insert-criteria.view-box-close.pointer de hoje
						.flex.view-box-open.shadow-2.pv2.ph3.absolute.top-0.left-0.bg-white.z-3.w-100.content-box.nt2.nl3.o-0
							span.f6 Envios
							.flex.flex-column.dropdown-item-box
								span.f6.theblack.b.ml1.bb.relative.has-icon-right.icon-dropdown.insert-criteria de hoje
								span.f6.theblack.b.ml1.mt3.relative.view-criteria.pointer.accent-hover de hoje
